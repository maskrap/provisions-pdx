<h3>Add a comment</h3>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="comment">Comment</label>
    {{input value=comment id="comment"}}
  </div>
  <button {{action 'saveComment'}}>Add a Comment</button>

</form>
