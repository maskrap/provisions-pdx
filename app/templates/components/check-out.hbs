<div class="row">
  <div class="checkout">
    <h1> Your Shopping Cart</h1>
    <table class="col-sm-11">
      <tr>
        <th>Item</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Cost</th>
      </tr>
      <br>
      {{#each shoppingCart.items as |item|}}
        <tr class="checkoutitems">
          <td><img class="img-thumbnail" src="{{item.image}}"></td>
          <td>{{item.name}}</td>
          <td>1</td>
          <td>{{item.category}}</td>
          <td>{{item.cost}}</td>
        </tr>
        <br>
      {{/each}}
    </table>
  </div>
</div>
<div class="row">
  <h3>TOTAL: ${{shoppingCart.total}}</h3>
</div>
