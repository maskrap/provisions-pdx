<div class="item-tile">
  <img src="{{model.image}}">
  <h3>{{model.name}}</h3>
  <h4>{{model.cost}}</h4>
  <p>{{model.description}}</p>
  <button {{action 'addToCart' item}}>Add to Cart</button>
</div>

<h3>Posted Comments:</h3>
<ul>
  {{#each model.comments as |comment|}}
    <li><h4>{{comment.name}} says</h4> <p>{{comment.comment}}</p></li>
  {{/each}}
</ul>
{{new-comment saveComment="saveComment" item=model}}
